<?xml version="1.0"?>
<config>
	<tabs>
		<ves translate="label" module="ves_treemenu">
			<label>Venus Extensions</label>
			<sort_order>211</sort_order>
		</ves>
	</tabs>
	<sections>
		<ves_treemenu translate="label">
			<label>Ves TreeMenu</label>
			<tab>ves</tab>
			<frontend_type>text</frontend_type>
			<sort_order>10</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<ves_treemenu translate="label">
					<label>General Setting</label>
					<frontend_type>text</frontend_type>
					<sort_order>1000</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>     
						<last_update translate="label">
							<label>Current Update Time</label>
							<frontend_type>label</frontend_type>
							<frontend_model>ves_treemenu/system_config_form_field_notification</frontend_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</last_update> 
						
						<show translate="label">
							<label>Enabled Module</label>
							<sort_order>1</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show>

						<menumode translate="label">
							<label>Mode of Menu</label>
							<sort_order>2</sort_order>
							<frontend_type>select</frontend_type>
							<source_model>ves_treemenu/system_config_source_listmode</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</menumode>
						
						<title translate="label">
							<label>Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<comment>Empty to hide</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</title>
						
						<showtitle translate="label">
							<label>Show Title</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showtitle>

						<showproductcount translate="label">
							<label>Show Product Count</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</showproductcount>
						
						<menustyle translate="label">
							<label>Menu Style</label>
							<frontend_type>select</frontend_type>
							<source_model>ves_treemenu/system_config_source_listMenuStyles</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</menustyle>

						<event translate="label">
							<label>Event</label>
							<frontend_type>select</frontend_type>
							<source_model>ves_treemenu/system_config_source_listEvents</source_model>
							<sort_order>20</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</event>

						<show_number_item translate="label">
							<label>Show Number Item</label>
							<frontend_type>text</frontend_type>
							<sort_order>25</sort_order>
							<comment>Empty to disable load more icon</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show_number_item>
						
					</fields>
				</ves_treemenu>

				<advanded_parameter translate="label">
					<label>Information - Support</label>
					<frontend_type>text</frontend_type>
					<sort_order>6001</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields> 
						<module_information translate="label">
							<label>Set Module Visable On Pages, Position</label>
							<frontend_type>label</frontend_type>
							<frontend_model>ves_treemenu/system_config_form_field_information</frontend_model>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</module_information>                        
					</fields>
				</advanded_parameter>	
			</groups>
		</ves_treemenu>
	</sections>    
</config>
